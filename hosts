#!/usr/bin/env php
<?php

if (file_exists(__DIR__.'/../../autoload.php')) {
    require __DIR__.'/../../autoload.php';
} else {
    require __DIR__.'/vendor/autoload.php';
}

$app = new Symfony\Component\Console\Application('Windows Hosts Manager', '1.0.0');
$app->add(new Kodo\WindowsHosts\ShowHostsCommand);
$app->add(new Kodo\WindowsHosts\AddHostCommand);
$app->add(new Kodo\WindowsHosts\RemoveHostCommand);
$app->add(new Kodo\WindowsHosts\ToggleHostCommand);

$app->run();